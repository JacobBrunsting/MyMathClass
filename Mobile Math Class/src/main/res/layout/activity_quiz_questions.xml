<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.brunsting.jacob.mobilemathclass.QuizQuestions"
    android:background="@color/backgroundColor"
    android:id="@+id/quizQuestionsLayout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/quizQuestionsAnswerTxt"
            android:baselineAligned="false"
            android:id="@+id/linearLayout"
            android:layout_above="@+id/quizQuestionsProgressBar">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="7"
                    android:id="@+id/sevenBtn"
                    android:layout_row="29"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_gravity="center|fill"
                    android:layout_weight="1"
                    android:background="@color/buttonColor1"
                    android:textColor="@color/textColor1"
                    android:textSize="@dimen/btnTextSize"
                    android:layout_marginLeft="@dimen/buttonMargin"
                    android:layout_marginTop="@dimen/buttonMargin" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="4"
                    android:id="@+id/fourBtn"
                    android:layout_row="30"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_weight="1"
                    android:background="@color/buttonColor1"
                    android:textColor="@color/textColor1"
                    android:textSize="@dimen/btnTextSize"
                    android:layout_marginLeft="@dimen/buttonMargin" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="1"
                    android:id="@+id/oneBtn"
                    android:layout_row="31"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_gravity="center|fill"
                    android:layout_weight="1"
                    android:background="@color/buttonColor1"
                    android:textColor="@color/textColor1"
                    android:textSize="@dimen/btnTextSize"
                    android:layout_marginLeft="@dimen/buttonMargin" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="/"
                    android:id="@+id/divideBtn"
                    android:layout_row="32"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_gravity="center|fill"
                    android:layout_weight="1"
                    android:background="@color/buttonColor1"
                    android:textColor="@color/textColor1"
                    android:textSize="@dimen/btnTextSize"
                    android:layout_marginLeft="@dimen/buttonMargin" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="@string/quizQuestionsDeleteBtn"
                    android:id="@+id/deleteBtn"
                    android:layout_row="32"
                    android:layout_column="2"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_gravity="center|fill"
                    android:layout_weight="1"
                    android:background="@color/buttonColor1"
                    android:textColor="@color/textColor1"
                    android:textSize="@dimen/btnTextSize"
                    android:layout_marginLeft="@dimen/buttonMargin" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="8"
                    android:id="@+id/eightBtn"
                    android:layout_row="29"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_weight="1"
                    android:background="@color/buttonColor1"
                    android:textColor="@color/textColor1"
                    android:textSize="@dimen/btnTextSize"
                    android:layout_marginTop="@dimen/buttonMargin" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="5"
                    android:id="@+id/fiveBtn"
                    android:layout_row="30"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_gravity="center|fill"
                    android:layout_weight="1"
                    android:background="@color/buttonColor1"
                    android:textColor="@color/textColor1"
                    android:textSize="@dimen/btnTextSize" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="2"
                    android:id="@+id/twoBtn"
                    android:layout_row="31"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_gravity="center|fill"
                    android:layout_weight="1"
                    android:background="@color/buttonColor1"
                    android:textColor="@color/textColor1"
                    android:textSize="@dimen/btnTextSize"
                    android:singleLine="false" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="0"
                    android:id="@+id/zeroBtn"
                    android:layout_row="32"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_gravity="center|fill"
                    android:layout_weight="1"
                    android:background="@color/buttonColor1"
                    android:textColor="@color/textColor1"
                    android:textSize="@dimen/btnTextSize" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="@string/quizQuestionsClearBtnTxt"
                    android:id="@+id/clearBtn"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:height="60dp"
                    android:textColor="@color/textColor1"
                    android:background="@color/buttonColor1"
                    android:textSize="@dimen/btnTextSize"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="9"
                    android:id="@+id/nineBtn"
                    android:layout_row="29"
                    android:layout_column="2"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_gravity="center|fill"
                    android:layout_weight="1"
                    android:background="@color/buttonColor1"
                    android:textColor="@color/textColor1"
                    android:textSize="@dimen/btnTextSize"
                    android:layout_marginRight="@dimen/buttonMargin"
                    android:layout_marginTop="@dimen/buttonMargin" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="6"
                    android:id="@+id/sixBtn"
                    android:layout_row="30"
                    android:layout_column="2"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_gravity="center|fill"
                    android:layout_weight="1"
                    android:background="@color/buttonColor1"
                    android:textColor="@color/textColor1"
                    android:textSize="@dimen/btnTextSize"
                    android:layout_marginRight="@dimen/buttonMargin" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="3"
                    android:id="@+id/threeBtn"
                    android:layout_row="31"
                    android:layout_column="2"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_gravity="center|fill"
                    android:layout_weight="1"
                    android:background="@color/buttonColor1"
                    android:textColor="@color/textColor1"
                    android:textSize="@dimen/btnTextSize"
                    android:layout_marginRight="@dimen/buttonMargin" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="-"
                    android:id="@+id/negativeBtn"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_gravity="center|fill"
                    android:layout_weight="1"
                    android:background="@color/buttonColor1"
                    android:textColor="@color/textColor1"
                    android:textSize="@dimen/btnTextSize"
                    android:layout_marginRight="@dimen/buttonMargin" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="@string/quizQuestionsEnterBtn"
                    android:id="@+id/enterBtn"
                    android:height="60dp"
                    android:textColor="@color/textColor1"
                    android:background="@color/buttonColor1"
                    android:textSize="@dimen/btnTextSize"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/buttonMargin" />

            </LinearLayout>

        </LinearLayout>

        <Space
            android:layout_width="20dp"
            android:layout_height="110dp"
            android:id="@+id/space" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/unsetTitleTxt"
            android:id="@+id/quizQuestionsQuestionNumberTxt"
            android:textSize="@dimen/titleTextSize"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/titleTextColor" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/unsetTitleTxt"
            android:id="@+id/quizQuestionsAnswerTxt"
            android:textSize="@dimen/titleTextSize"
            android:textColor="@color/titleTextColor"
            android:layout_below="@+id/space"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:maxLines="1" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/quizQuestionsProgressBar"
            android:background="@color/buttonColor1"
            android:max="100"
            android:progressTint="@color/textColor1"
            android:indeterminate="false"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/buttonMargin"
            android:layout_marginRight="@dimen/buttonMargin"
            android:progress="50" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/unsetTitleTxt"
            android:id="@+id/quizQuestionsQuestionTxt"
            android:textSize="@dimen/titleTextSize"
            android:textColor="@color/titleTextColor"
            android:layout_gravity="center_horizontal|top"
            android:layout_above="@+id/quizQuestionsAnswerTxt"
            android:layout_alignParentTop="true"
            android:maxLines="3"
            android:layout_alignRight="@+id/quizQuestionsAnswerTxt"
            android:layout_alignEnd="@+id/quizQuestionsAnswerTxt"
            android:gravity="top|left"
            android:layout_toRightOf="@+id/quizQuestionsQuestionNumberTxt"
            android:layout_toEndOf="@+id/quizQuestionsQuestionNumberTxt" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:layout_alignTop="@+id/quizQuestionsAnswerTxt"
            android:layout_alignLeft="@+id/quizQuestionsProgressBar"
            android:layout_alignStart="@+id/quizQuestionsProgressBar"
            android:layout_above="@+id/linearLayout"
            android:background="@color/tint1"
            android:layout_alignRight="@+id/quizQuestionsProgressBar"
            android:layout_alignEnd="@+id/quizQuestionsProgressBar"
            android:layout_marginBottom="-3dp"
            android:layout_marginTop="-13dp"
            android:contentDescription="backgroundTint" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/quizQuestionsTutorialLayout">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="#64000000"
            android:contentDescription="backgroundTint" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quizQuestionsTutorialNextBtn"
            android:id="@+id/quizQuestionsTutorialNextBtn"
            android:background="#bdbdbd"
            android:textColor="#ffffff"
            android:width="90dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="15dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/quizQuestionsTutorialTxt"
            android:textColor="#ffffff"
            android:textSize="@dimen/titleTextSize"
            android:gravity="center_horizontal"
            android:text="@string/unsetTitleTxt"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/quizQuestionsTutorialNextBtn" />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:foreground="@color/correctAnswerColor"
        android:id="@+id/correctQuestionBackground"
        android:layout_alignParentTop="true"
        android:alpha="0"
        android:background="@color/correctAnswerColor">

    </FrameLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:foreground="@color/incorrectAnswerColor"
        android:id="@+id/incorrectQuestionBackground"
        android:layout_alignParentTop="true"
        android:alpha="0"
        android:layout_gravity="right|top" />

</RelativeLayout>
